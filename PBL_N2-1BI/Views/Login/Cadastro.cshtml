@model UsuarioViewModel

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastrar Usuário</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 20px;
        }

        .container {
            max-width: 1200px;
            margin: auto;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        button {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        h2 {
            text-align: center;
            color: #333;
        }

        input {
            width: 75%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        select {
            width: 50%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        label {
            width: 25%;
            padding: 8px;
            margin-bottom: 10px;
            border: none;
            border-radius: 5px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: black;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body style="text-align:center">
    <form action="/Login/Salvar" method="post" style="wtext-align:center">
        <div class="container" style="width:80%; text-align:center">
            <h2>Cadastrar Usuário</h2>
            <div style="text-align:center">
                <br>
                <input id="idUsuario" type="text" name="Id" value="@Model.Id" hidden>
                <span asp-validation-for="Login" class="text-danger"></span><br>
                <h5>Login:</h5>
                <input type="text" style="width:80%" asp-for="Login" placeholder="Login" value="@Model.Login" maxlength="50">
                <br>
                <span asp-validation-for="Senha" class="text-danger"></span><br>
                <h5>Senha:</h5>
                <input type="password" id="senha" style="width:80%" asp-for="Senha" placeholder="Senha" value="@Model.Senha" maxlength="12">
                <br>
                <h5>Confirmar Senha:</h5>
                <input type="password" id="confirmarSenha" style="width:80%" placeholder="Confirmar Senha" maxlength="12">
                <br>
                <span asp-validation-for="Nome" class="text-danger"></span><br>
                <h5>Nome:</h5>
                <input type="text" style="width:80%" asp-for="Nome" placeholder="Nome" value="@Model.Nome" maxlength="100">
                <br>
                <span asp-validation-for="Email" class="text-danger"></span><br>
                <h5>E-mail:</h5>
                <input type="text" style="width:80%" asp-for="Email" placeholder="E-mail" maxlength="100">
                <br>
            </div>
        </div>
        <br>
        <div style="text-align:center">
            <input type="button" value="Cadastrar" onclick="verificarSenha()" style="width:15%;background-color:black; color:white">
            <input type="submit" id="cadastrar" value="Cadastrar" hidden style="width:15%;background-color:black; color:white">
            <button type="button" style="width:15%" onclick="window.location.href='/Login/Login'">Cancelar</button>
        </div>
        @section Scripts {
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
            <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
            <script>
                function verificarSenha(){
                    var senha = $('#senha').val()
                    var confirmarSenha = $('#confirmarSenha').val()

                    if(senha == confirmarSenha)
                        $('#cadastrar').click()
                    else{
                          Swal.fire({
                              title: 'Aviso',
                              text: 'As senhas não coincidem!',
                              icon: 'warning',
                              showConfirmButton: false,
                              showCloseButton: true,
                              allowOutsideClick: true
                          });
                    }
                }
            </script>
        }
    </form>
</body>

