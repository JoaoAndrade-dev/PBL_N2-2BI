@model SimulacaoViewModel

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro de Usuários</title>
    <style>
        #overlay-loading {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.5); /* fundo semi-transparente */
            z-index: 9999; /* fica acima de tudo */
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            color: white;
            font-size: 20px;
        }

        .spinner {
            border: 8px solid #f3f3f3; /* Light grey */
            border-top: 8px solid #3498db; /* Azul */
            border-radius: 50%;
            width: 60px;
            height: 60px;
            animation: spin 1s linear infinite;
            margin-bottom: 15px;
        }

        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 20px;
        }

        .container {
            max-width: 1200px;
            margin: auto;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        button {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        h2 {
            text-align: center;
            color: #333;
        }

        input {
            width: 75%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        select {
            width: 75%;
            padding: 15px;
            height: 49px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        label {
            width: 25%;
            padding: 8px;
            margin-bottom: 10px;
            border: none;
            border-radius: 5px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: black;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body style="text-align:center">
    <form action="/Simulacao/Salvar" method="post" style="wtext-align:center">
        <div class="container" style="width:65%; text-align:center">
            <h2>Cadastrar Simulação</h2>
            <br>
            <div style="text-align:center">
                <input id="idSimulacao" type="text" name="Id" value="@Model.Id" hidden>
                <span asp-validation-for="Nome" class="text-danger"></span><br>
                @if (Model.Id.HasValue)
                {
                    <div style="display: flex; justify-content: center; align-items: center; gap: 10px; margin-bottom: 10px;">
                        <div style="text-align: center;">
                            <h5>Nome:</h5>
                            <input type="text" style="width: 265px;" asp-for="Nome" placeholder="Nome" value="@Model.Nome" maxlength="50">
                        </div>
                        <div style="text-align: center;">
                            <h5>Data Criação/Alteração:</h5>
                            <input type="text" style="width: 265px;" name="DataCriacaoAlteracao" placeholder="Data Criação/Alteração" value="@Model.DataCriacaoAlteracao" disabled>
                        </div>
                    </div>
                }
                else
                {
                    <div style="text-align:center">
                        <h5>Nome:</h5>
                    </div>
                    <input type="text" style="width:75%" asp-for="Nome" placeholder="Nome" value="@Model.Nome" maxlength="50">
                }
                <h5>Motor:</h5>
                <select name="IdMotor">
                    @foreach (var motor in ViewBag.Motores as List<MotorViewModel>)
                    {
                        var selected = motor.Id == Model.IdMotor ? "selected='selected'" : "";
                        @Html.Raw($"<option value='{motor.Id}' {selected}>{motor.Modelo}</option>")
                    }
                </select>

                <h5>Usuário:</h5>
                <select name="IdUsuario">
                    @foreach (var usuario in ViewBag.Usuarios as List<UsuarioViewModel>)
                    {
                        var selected = usuario.Id == Model.IdUsuario ? "selected='selected'" : "";
                        @Html.Raw($"<option value='{usuario.Id}' {selected}>{usuario.Login}</option>")
                    }
                </select>
                <br>
                <br>
                <h4>Dados</h4>
                <br>
                <div style="text-align:center">
                    <label style="width:15%;" for="DataInicio">Data Início:</label>
                    <input style="width:60%;" type="datetime-local" id="DataInicio" name="DataInicio" onchange="simulacaoSection.onchangeCalculos()" value="@(Model.DataInicio.HasValue ? Model.DataInicio.Value.ToString("yyyy-MM-ddTHH:mm") : "")" />
                </div>
                <div style="text-align:center">
                    <label style="width:15%;" for="DataFim">Data Fim:</label>
                    <input style="width:60%;" type="datetime-local" id="DataFim" name="DataFim" onchange="simulacaoSection.onchangeCalculos()" value="@(Model.DataFim.HasValue ? Model.DataFim.Value.ToString("yyyy-MM-ddTHH:mm") : "")" />
                </div>
                <br>
                <div id="overlay-loading" style="display:none;">
                    <div class="spinner"></div>
                    <p>Carregando...</p>
                </div>
                <div style="text-align:center">
                    <div style="text-align:center">
                        <label style="width:35%;" for="Media">Média do Período:</label>
                    </div>
                    <input style="width:60%;" type="text" id="media" name="Media" value="@Model.Media"/>
                </div>
                <div style="text-align:center">
                    <div style="text-align:center">
                        <label style="width:35%;" for="Max">Máximo do período:</label>
                    </div>
                    <input style="width:60%;" type="text" id="max" name="Max" value="@Model.Max"/>
                </div>
                <div style="text-align:center">
                    <div style="text-align:center">
                        <label style="width:35%;" for="Min">Mínimo do período:</label>
                    </div>
                    <input style="width:60%;" type="text" id="min" name="Min" value="@Model.Min"/>
                </div>
            </div>
            <br>
        </div>
        <br>
        <div style="text-align:center;">
            <input type="submit" value="Salvar" style="width:15%;background-color:black;color:white">
            <button type="button" style="width:15%" onclick="window.location.href='/Simulacao/Consulta'">Cancelar</button>
        </div>
        @section Scripts {
            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
            <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
        }
    </form>
</body>
