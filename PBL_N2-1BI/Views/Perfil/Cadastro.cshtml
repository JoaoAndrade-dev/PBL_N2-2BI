@model PerfilViewModel

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro de Perfis</title>
</head>
<body class="login-page">
    <form action="/Perfil/Salvar" method="post" class="perfil-form-main">
        @Html.AntiForgeryToken()
        <div class="perfil-form-container">
            <h2 class="perfil-form-title">Cadastrar Perfil</h2>
            <div class="perfil-form-content">
                <input id="idMotor" type="text" name="Id" value="@Model.Id" hidden>
                <span asp-validation-for="Nome" class="perfil-validation-error"></span>
                <div class="perfil-form-group">
                    <label class="perfil-form-label">Nome:</label>
                    <input type="text" class="perfil-form-input" asp-for="Nome" placeholder="Nome" value="@Model.Nome" maxlength="100">
                </div>
            </div>
        </div>

        <div class="perfil-permissions-container">
            <h2 class="perfil-permissions-title">Permissões</h2>

            <div class="perfil-permission-section">
                <h4 class="perfil-permission-category">Usuários:</h4>
                <div class="perfil-checkbox-group">
                    <label class="perfil-checkbox-label">
                        <input type="checkbox" id="UsuarioConsulta" onchange="perfilSection.onchangePermissoes()" class="perfil-checkbox-input"> Consultar
                    </label>
                    <label class="perfil-checkbox-label">
                        <input type="checkbox" id="UsuarioAdicionar" onchange="perfilSection.onchangePermissoes()" class="perfil-checkbox-input"> Adicionar
                    </label>
                    <label class="perfil-checkbox-label">
                        <input type="checkbox" id="UsuarioEditar" onchange="perfilSection.onchangePermissoes()" class="perfil-checkbox-input"> Editar
                    </label>
                    <label class="perfil-checkbox-label">
                        <input type="checkbox" id="UsuarioExcluir" onchange="perfilSection.onchangePermissoes()" class="perfil-checkbox-input"> Excluir
                    </label>
                </div>
            </div>

            <div class="perfil-permission-section">
                <h4 class="perfil-permission-category">Motores:</h4>
                <div class="perfil-checkbox-group">
                    <label class="perfil-checkbox-label">
                        <input type="checkbox" id="MotorConsulta" onchange="perfilSection.onchangePermissoes()" class="perfil-checkbox-input"> Consultar
                    </label>
                    <label class="perfil-checkbox-label">
                        <input type="checkbox" id="MotorAdicionar" onchange="perfilSection.onchangePermissoes()" class="perfil-checkbox-input"> Adicionar
                    </label>
                    <label class="perfil-checkbox-label">
                        <input type="checkbox" id="MotorEditar" onchange="perfilSection.onchangePermissoes()" class="perfil-checkbox-input"> Editar
                    </label>
                    <label class="perfil-checkbox-label">
                        <input type="checkbox" id="MotorExcluir" onchange="perfilSection.onchangePermissoes()" class="perfil-checkbox-input"> Excluir
                    </label>
                </div>
            </div>

            <div class="perfil-permission-section">
                <h4 class="perfil-permission-category">Perfis:</h4>
                <div class="perfil-checkbox-group">
                    <label class="perfil-checkbox-label">
                        <input type="checkbox" id="PerfilConsulta" onchange="perfilSection.onchangePermissoes()" class="perfil-checkbox-input"> Consultar
                    </label>
                    <label class="perfil-checkbox-label">
                        <input type="checkbox" id="PerfilAdicionar" onchange="perfilSection.onchangePermissoes()" class="perfil-checkbox-input"> Adicionar
                    </label>
                    <label class="perfil-checkbox-label">
                        <input type="checkbox" id="PerfilEditar" onchange="perfilSection.onchangePermissoes()" class="perfil-checkbox-input"> Editar
                    </label>
                    <label class="perfil-checkbox-label">
                        <input type="checkbox" id="PerfilExcluir" onchange="perfilSection.onchangePermissoes()" class="perfil-checkbox-input"> Excluir
                    </label>
                </div>
            </div>

            <div class="perfil-permission-section">
                <h4 class="perfil-permission-category">Simulações:</h4>
                <div class="perfil-checkbox-group">
                    <label class="perfil-checkbox-label">
                        <input type="checkbox" id="SimulacaoConsulta" onchange="perfilSection.onchangePermissoes()" class="perfil-checkbox-input"> Consultar
                    </label>
                    <label class="perfil-checkbox-label">
                        <input type="checkbox" id="SimulacaoAdicionar" onchange="perfilSection.onchangePermissoes()" class="perfil-checkbox-input"> Adicionar
                    </label>
                    <label class="perfil-checkbox-label">
                        <input type="checkbox" id="SimulacaoEditar" onchange="perfilSection.onchangePermissoes()" class="perfil-checkbox-input"> Editar
                    </label>
                    <label class="perfil-checkbox-label">
                        <input type="checkbox" id="SimulacaoExcluir" onchange="perfilSection.onchangePermissoes()" class="perfil-checkbox-input"> Excluir
                    </label>
                </div>
            </div>
        </div>

        <input type="hidden" id="Permissoes" asp-for="Permissoes" value="@Model.Permissoes">

        <div class="perfil-form-actions">
            <input type="submit" value="Salvar" class="perfil-btn perfil-btn-primary">
            <button type="button" class="perfil-btn perfil-btn-secondary" onclick="window.location.href='/Perfil/Consulta'">Cancelar</button>
        </div>
    </form>

    @section Scripts {
        <script src="@Url.Content("~/js/site.js")"></script>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

        <script>
            $(document).ready(function () {
                perfilSection.preenchePermissoes();
            });
        </script>
    }
</body>
</html>