@model MotorViewModel

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro de Usuários</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 20px;
        }

        .container {
            max-width: 1200px;
            margin: auto;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        button {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        h2 {
            text-align: center;
            color: #333;
        }

        input {
            width: 75%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        select {
            width: 50%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        label {
            width: 25%;
            padding: 8px;
            margin-bottom: 10px;
            border: none;
            border-radius: 5px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        th {
            background-color: black;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body style="text-align:center">
    <form action="/Motor/Salvar" method="post" style="text-align:center">
        @Html.AntiForgeryToken()
        <div class="container" style="width:65%; text-align:center">
            <h2>Cadastrar Motor</h2>
            <div style="text-align:center">
                <input id="idMotor" type="text" name="Id" value="@Model.Id" hidden>
                <span asp-validation-for="Modelo" class="text-danger"></span><br>
                <h5>Modelo:</h5>
                <input type="text" style="width:65%" asp-for="Modelo" placeholder="Modelo" value="@Model.Modelo" maxlength="50">
                <br>
                <span asp-validation-for="Fabricante" class="text-danger"></span><br>
                <h5>Fabricante:</h5>
                <input type="text" style="width:65%" asp-for="Fabricante" placeholder="Fabricante" value="@Model.Fabricante" maxlength="50">
                <br><br>
                <h5>Temperatura de Secagem ºC:</h5>
                <input type="text" style="width:65%" name="TemperaturaSecagem" placeholder="Temperatura de Secagem ºC" value="@Model.TemperaturaSecagem" maxlength="18">
                <br>
                <span asp-validation-for="NumeroDeSerie" class="text-danger"></span><br>
                <h5>Numero de Série:</h5>
                <input type="text" style="width:65%" asp-for="NumeroDeSerie" placeholder="Numero de Série" value="@Model.NumeroDeSerie" maxlength="50">
            </div>
        </div>
        <br>
        <div style="text-align:center;">
            <input type="submit" value="Salvar" style="width:15%;background-color:black; color:white">
            <button type="button" style="width:15%" onclick="window.location.href='/Motor/Consulta'">Cancelar</button>
        </div>
    </form>
    @section Scripts {
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }
</body>

